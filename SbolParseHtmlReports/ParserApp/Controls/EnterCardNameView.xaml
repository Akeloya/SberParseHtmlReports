<UserControl
    x:Class="ParserApp.Controls.EnterCardNameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ParserApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prop="clr-namespace:ParserApp.Properties"
    Width="200"
    d:DataContext="{d:DesignInstance local:EnterCardNameViewModel}"
    d:DesignHeight="450"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Margin="5" Text="Карта отчета" />
        <TextBox
            Name="TbCardName"
            Margin="5"
            Text="{Binding CardName, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button cal:Message.Attach="Apply" Content="{x:Static prop:Resources.Apply}" />
            <Button cal:Message.Attach="cancel" Content="{x:Static prop:Resources.Cancel}" />
        </StackPanel>
    </StackPanel>
</UserControl>
